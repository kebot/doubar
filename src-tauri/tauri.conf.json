{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-bar",
  "version": "0.1.0",
  "identifier": "com.yaofur.tauri-bar",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-bar",
        "width": 1920,
        "height": 60,
        "resizable": false,
        "visible": true,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": false,
        "alwaysOnBottom": true,
        "skipTaskbar": true,
        "transparent": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "focusable": false,
        "visibleOnAllWorkspaces": true,
        "x": 0,
        "y": 0
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ],
          "sidecar": false
        },
        {
          "name": "osascript",
          "cmd": "osascript",
          "args": true,
          "sidecar": false
        }
      ]
    }
  ]
}